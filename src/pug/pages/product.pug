                                span.loader
                                span.loader
                                span.loader
                                span.loader
                        .swiper-nav
                            button.swiper-button-next
                                i.arrow-swiper.ri-arrow-right-s-line
                            button.swiper-button-prev
                                i.arrow-swiper.ri-arrow-left-s-line
block modal
    #data-share.data-popup.d-share
        .wrapper
            .data-content
                button.close-btn
                    i.ri-close-line
                form.form-share
                    p.label Copy link
                    input(type='text' disabled value='https://youtube.com')
                    span
                        i.ri-file-copy-line
                .media-share
                    p.label Share
                    ul.list-inline
                      each icon in ['ri-facebook-line','ri-instagram-line','ri-pinterest-line','ri-youtube-line','ri-whatsapp-line']
                        li
                            a(href='#0')
                                i(class=`${icon}`)
    #data-question.data-popup.d-question
        .wrapper
            .data-content
                button.close-btn
                    i.ri-close-line
                h3.title.data-content__title The question
                form.form-question(action='')
                    label
                        input(type='text' placeholder='Name')
                    label
                        input(type='text' placeholder='Email')
                    label
                        textarea(name='' cols='30' rows='5' placeholder='Your question is...')
                    button.btn.btn__secondary Submit
    #data-review.data-popup.d-review
        .wrapper
            .data-content
                button.close-btn
                    i.ri-close-line
                h3.title Write a Review
                form.form-review(action='')
                    label
                        input.form-review__name(type='text' placeholder='Name')
                    label
                        input.form-review__email(type='text' placeholder='Email')
                    .rating
                        span Your rating:
                        .stars
                          each star in ['star_5','star_4','star_3','star_2','star_1']
                            input(type='radio' name='rating' id=`${star}`)
                            label(for=`${star}`)
                                i.ri-star-fill
                    label
                        input.form-review__review-title(type='text' placeholder='Review title')
                    label
                        textarea.form-review__review-description(name='' cols='30' rows='5' placeholder='Your review is...')
                    button.btn.btn__secondary Submit









