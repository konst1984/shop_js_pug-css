                                li.product-control__item
                                    button.product-control__btn
                                        i.ri-heart-line
                                        span Add to wishlist
                                li.product-control__item
                                    button.product-control__btn
                                        i.ri-arrow-left-right-line
                                        span Compare
                                li.product-control__item
                                    button.product-control__btn.open-btn(data-target="data-share")
                                        i.ri-chare-forward-line
                                        span Share
                                li.product-control__item
                                    button.product-control__btn.open-btn(data-target="data-question")
                                        i.ri-question-line
                                        span Ask Question
                        .shipping
                            ul.shipping__list
                                li.shipping__item
                                    i.ri-gift-line
                                    span  Free shipping & return
                                    span.text_gray  On order over $100
                                li.shipping__item
                                    i.ri-truck-line
                                    span  Estimate delivery:
                                    span.text_gray  01 - 07 May, 2030
            .product-detail
