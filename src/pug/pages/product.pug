extends ../libs/_layout
include ../libs/_libs

block title
    title Product page
block subheader
    .subheader
        ul.subheader__list.list-inline
          each value  in ['home', 'products','sweater']
              li.subheader__item
                  span= value
          li.subheader__item
              span the sweater in tosca
block main
