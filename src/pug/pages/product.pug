        .container.container_padding
            .product
                .product-wrapper.box-grid
                    .product-image
                        .outer-main
                            .outer-main__swiper.swiper
                                .outer-main__wrapper.swiper-wrapper
                                    span.single-loader
                            .custom-pagination
                                .swiper-scrollbar
                        .outer-card
                            .outer-card__swiper.swiper
                                .outer-card__wrapper.swiper-wrapper
                    .summary
                        span.single-loader
                        .summary-content.hide
                            h1.title
                            .product-group
                                .product-price
                                    span.current-price
                                    .product-price__sale.flex
                                        .price-before
                                        .price-discount
                                .product-rating.flex
                                    span
                                        i.ri-star-fill
                                        span 4.8
                                    a(href='#0')  3 Reviews
                            .product-color
                                span Colors:
                                div.color.flex
                            .product-size
                                span Size:
                                div.size.flex
                            .product-stock.flex
                                strong 201
                                span.text_gray in stock
                                i.ri-checkbox-circle-line
                        form.product-form
                            .product-quantity.flex-ac
                                button.product-quantity__btn.product-quantity__btn_decrease(type='button' data-action='decrease') -
                                label.label
                                    input.input(type='text' value='1' data-quantity)
                                button.product-quantity__btn.product-quantity__btn_increase(type='button' data-action='increase') +
                            button.btn.btn__primary.btn__primary_green#addToCart(type='button' disabled) Add to cart
                        .product-control
